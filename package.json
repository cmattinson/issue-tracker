{
	"name": "issue-tracker",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "bun --hot src/index.tsx",
		"start": "NODE_ENV=production bun src/index.tsx",
		"build": "bun run build.ts",
		"db:push": "bunx drizzle-kit generate && bunx drizzle-kit push",
		"podman:start": "bun run db:push && bun run dev"
	},
	"dependencies": {
		"bun-plugin-tailwind": "^0.0.15",
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.44.7",
		"drizzle-seed": "^0.3.1",
		"drizzle-zod": "^0.8.3",
		"pg": "^8.16.3",
		"react": "^19",
		"react-dom": "^19",
		"tailwindcss": "^4.1.11",
		"zod": "^4.1.13"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@types/bun": "latest",
		"@types/pg": "^8.15.6",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"drizzle-kit": "^0.31.7",
		"tsx": "^4.20.6"
	}
}
