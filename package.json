{
	"name": "issue-tracker",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "bun --hot --inspect=0.0.0.0:6499/debug src/index.ts",
		"start": "NODE_ENV=production bun src/index.ts",
		"build": "bun run build.ts",
		"db:push": "bunx drizzle-kit push",
		"db:seed": "bun src/seed.ts",
		"docker:start": "bunx drizzle-kit push --force && bun run db:seed && bun run dev"
	},
	"dependencies": {
		"@elysiajs/openapi": "^1.4.11",
		"@elysiajs/static": "^1.4.7",
		"@sinclair/typebox": "0.34.41",
		"@tanstack/react-query": "^5.90.11",
		"@tanstack/react-query-devtools": "^5.91.1",
		"bun-plugin-tailwind": "^0.0.15",
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.44.7",
		"drizzle-seed": "^0.3.1",
		"drizzle-typebox": "^0.3.3",
		"drizzle-zod": "^0.8.3",
		"elysia": "^1.4.16",
		"pg": "^8.16.3",
		"react": "^19",
		"react-dom": "^19",
		"tailwindcss": "^4.1.11",
		"zod": "^4.1.13"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@types/bun": "^1.3.3",
		"@types/pg": "^8.15.6",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"drizzle-kit": "^0.31.7",
		"tsx": "^4.20.6"
	}
}
